<div class="wrapper">
  <div class="side-bar">
    <div class="side-bar-header">
    </div>
    <div class="staffs">
      <%= link_to(root_path, method: :get) do %>
        <%= image_tag 'animal_chara_lion_biyoushi.png', size: "120x120" , class: "img-file"%>
      <% end %>
    </div>
  </div>
  <div class="reservation-main">
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
    <div class="reservation-main-header">
      <div class="left-header">
        <div class="header-title">
          お客様情報の登録
        </div>
      </div>
      <div class="right-header">
        <div class="header-button-parent">
          <div class="header-button-reverse">
            <%= link_to "Index Page", staffs_path %>
          </div>
          <div class='header-button-reverse'>
            <%= link_to 'To Sign In', new_customer_session_path%>
          </div>
          <div class="actions">
            <%= f.submit "Sign Up", class: 'btn' %>
          </div>
        </div>
      </div>
    </div>
    <div class="reservation-parent-customer">
      <div class="reservation">
        <%= devise_error_messages! %>
        <div class='field'>
          <div class='field-label'>
            <b>電子メールアドレス</b>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <b>パスワード</b>(英数字6文字以上)
            <%= f.label :password%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <b>パスワード(確認)</b>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='field-parent'>
          <div class='field-child'>
            <div class='field-label'>
              <b>姓</b>(全角)
              <%= f.label :last_name%>
            </div>
            <div class='field-input'>
              <%= f.text_field :last_name, autofocus: true%>
            </div>
          </div>
          <div class='field-child'>
            <div class='field-label'>
              <b>名</b>(全角)
              <%= f.label :first_name%>
            </div>
            <div class='field-input'>
              <%= f.text_field :first_name, autofocus: true%>
            </div>
          </div>
        </div>
        <div class='field-parent'>
          <div class='field-child'>
            <div class='field-label'>
              <b>姓：カナ</b>(全角)
              <%= f.label :last_name_kana%>
            </div>
            <div class='field-input'>
              <%= f.text_field :last_name_kana, autofocus: true%>
            </div>
          </div>
          <div class='field-child'>
            <div class='field-label'>
              <b>名：カナ</b>(全角)
              <%= f.label :first_name_kana%>
            </div>
            <div class='field-input'>
              <%= f.text_field :first_name_kana, autofocus: true%>
            </div>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <b>電話番号</b>(半角：ハイフンなし)
            <%= f.label :phone_number%>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone_number, autofocus: true%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
